<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFCDD2"> <!-- Light red background -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_dialog_alert"
        android:contentDescription="@string/warning_icon"
        android:layout_gravity="center"
        android:padding="16dp"
        app:tint="@android:color/holo_red_dark" /> <!-- Warning icon -->

    <TextView
        android:id="@+id/text_view_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center" /> <!-- Updated text size, style, and color -->

    <TextView
        android:id="@+id/text_view_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center" /> <!-- Updated text size, style, and color -->

    <TextView
        android:id="@+id/text_view_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textSize="22sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_gravity="center" /> <!-- Updated text size, style, and color -->

</LinearLayout>
