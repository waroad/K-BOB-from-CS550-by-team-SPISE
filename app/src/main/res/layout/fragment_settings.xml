<!-- res/layout/fragment_settings.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground">

    <!-- Manage Profile Button -->
    <Button
        android:id="@+id/button_manage_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/manage_profile"
        android:layout_alignParentTop="true" />

    <!-- Personal Settings Button -->
    <Button
        android:id="@+id/button_personal_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/personal_settings"
        android:layout_below="@+id/button_manage_profile"
        android:layout_marginTop="16dp" />

    <!-- Enable Dark Mode Button -->
    <Button
        android:id="@+id/button_dark_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_dark_mode"
        android:layout_below="@+id/button_personal_settings"
        android:layout_marginTop="16dp" />

    <!-- Change Language Button -->
    <Button
        android:id="@+id/button_language"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/change_language"
        android:layout_below="@+id/button_dark_mode"
        android:layout_marginTop="16dp" />

    <!-- Profile Name Text View -->
    <TextView
        android:id="@+id/text_current_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_profile"
        android:layout_below="@+id/button_language"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:textColor="@color/text_color_primary" />
</RelativeLayout>
