<!-- res/layout/activity_personal_settings.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Input Field for Person's Name -->
        <EditText
            android:id="@+id/input_person_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textPersonName" />

        <!-- Checkboxes for Preferences -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/preferences"
            android:textSize="18sp"
            android:layout_marginTop="16dp"
            android:padding="8dp" />

        <CheckBox
            android:id="@+id/check_beef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beef (소고기)" />

        <CheckBox
            android:id="@+id/check_pork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pork (돼지고기)" />

        <CheckBox
            android:id="@+id/check_shellfish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shellfish (갑각류)" />

        <CheckBox
            android:id="@+id/check_fish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fish (어패류)" />

        <CheckBox
            android:id="@+id/check_peanut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peanut (땅콩)" />

        <CheckBox
            android:id="@+id/check_chicken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chicken (닭고기)" />

        <CheckBox
            android:id="@+id/check_lamb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lamb (양고기)" />

        <CheckBox
            android:id="@+id/check_egg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Egg (계란)" />

        <CheckBox
            android:id="@+id/check_dairy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dairy (유제품)" />

        <CheckBox
            android:id="@+id/check_flour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flour (밀가루)" />

        <!-- Save Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_save_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_settings"
            android:layout_marginTop="24dp"
            style="@style/FancyButton" />
    </LinearLayout>
</ScrollView>
